<ui:FluentWindow
    x:Class="PDV.Clients.Views.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Dashboard"
    Width="1100"
    Height="700"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,24">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="SemiBold"
                Text="Dashboard Principal" />

            <ui:Button
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Appearance="Primary"
                Command="{Binding RefreshCommand}">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Margin="0,0,8,0" Symbol="ArrowSync24" />
                    <TextBlock Text="Atualizar" />
                </StackPanel>
            </ui:Button>
        </Grid>

        <UniformGrid
            Grid.Row="1"
            Margin="0,0,0,12"
            Columns="4">
            <ui:CardControl Margin="0,0,12,0" Padding="12">
                <Grid>
                    <ui:SymbolIcon
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        FontSize="48"
                        Opacity="0.1"
                        Symbol="People24" />
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Usuários" />
                        <TextBlock
                            FontSize="28"
                            FontWeight="Bold"
                            Text="{Binding TotalUsers}" />
                    </StackPanel>
                </Grid>
            </ui:CardControl>

            <ui:CardControl Margin="6,0,6,0" Padding="12">
                <Grid>
                    <ui:SymbolIcon
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        FontSize="48"
                        Opacity="0.1"
                        Symbol="Globe24" />
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Sessões Ativas" />
                        <TextBlock
                            FontSize="28"
                            FontWeight="Bold"
                            Text="{Binding ActiveSessions}" />
                    </StackPanel>
                </Grid>
            </ui:CardControl>

            <ui:CardControl Margin="6,0,6,0" Padding="12">
                <Grid>
                    <ui:SymbolIcon
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        FontSize="48"
                        Opacity="0.1"
                        Symbol="Receipt24" />
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Transações (hoje)" />
                        <TextBlock
                            FontSize="28"
                            FontWeight="Bold"
                            Text="{Binding TransactionsToday}" />
                    </StackPanel>
                </Grid>
            </ui:CardControl>

            <ui:CardControl Margin="12,0,0,0" Padding="12">
                <Grid>
                    <ui:SymbolIcon
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        FontSize="48"
                        Opacity="0.1"
                        Symbol="Money24" />
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Receita (hoje)" />
                        <TextBlock
                            FontSize="28"
                            FontWeight="Bold"
                            Text="{Binding RevenueToday, StringFormat=C}" />
                    </StackPanel>
                </Grid>
            </ui:CardControl>
        </UniformGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <ui:Card
                Grid.Column="0"
                Margin="0,0,12,0"
                Padding="12">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,12"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Transações Recentes" />

                    <ui:DataGrid
                        Height="400"
                        AutoGenerateColumns="False"
                        ItemsSource="{Binding RecentTransactions}"
                        VerticalScrollBarVisibility="Auto">
                        <ui:DataGrid.Columns>
                            <DataGridTextColumn
                                Width="1.5*"
                                Binding="{Binding TransactionId}"
                                Header="ID Transação" />
                            <DataGridTextColumn
                                Width="2*"
                                Binding="{Binding CustomerName}"
                                Header="Cliente" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Amount, StringFormat=C}"
                                Header="Valor" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Status}"
                                Header="Status" />
                        </ui:DataGrid.Columns>
                    </ui:DataGrid>
                </StackPanel>
            </ui:Card>

            <StackPanel Grid.Column="1">
                <ui:Card Margin="0,0,0,12" Padding="12">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,12"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="Ações Rápidas" />

                        <ui:CardAction
                            Command="{Binding NewSaleCommand}"
                            Content="Nova Venda"
                            Icon="{ui:SymbolIcon Add24}"
                            ToolTip="Iniciar um novo registro de venda." />

                        <ui:CardAction
                            Margin="0,8,0,0"
                            Command="{Binding NewUserCommand}"
                            Content="Novo Usuário"
                            Icon="{ui:SymbolIcon PersonAdd24}"
                            ToolTip="Adicionar um novo membro à equipe." />

                        <ui:CardAction
                            Margin="0,8,0,0"
                            Command="{Binding RunReportCommand}"
                            Content="Gerar Relatório"
                            Icon="{ui:SymbolIcon DocumentArrowDown24}"
                            ToolTip="Exportar o relatório de vendas do dia." />

                    </StackPanel>
                </ui:Card>

                <ui:Card Padding="12">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,12"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="Status do Sistema" />
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                FontWeight="SemiBold"
                                Text="Servidor de API:" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Foreground="Green"
                                Text="{Binding ServerStatus}" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,8,10,0"
                                FontWeight="SemiBold"
                                Text="Carga (CPU):" />
                            <ProgressBar
                                Grid.Row="1"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Value="{Binding CpuLoad}" />
                        </Grid>
                    </StackPanel>
                </ui:Card>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>