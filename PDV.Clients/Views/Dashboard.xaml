<ui:FluentWindow
    x:Class="PDV.Clients.Views.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Dashboard"
    Width="1400"
    Height="900"
    MinWidth="1000"
    MinHeight="700"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,32">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="32"
                FontWeight="SemiBold"
                Text="Dashboard Principal" />

            <ui:Button
                Padding="16,8"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Appearance="Primary"
                Command="{Binding RefreshCommand}">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Margin="0,0,8,0" Symbol="ArrowSync24" />
                    <TextBlock Text="Atualizar" />
                </StackPanel>
            </ui:Button>
        </Grid>



        <UniformGrid
            Grid.Row="1"
            Margin="0,0,0,24"
            Columns="4">
            <ui:CardControl Margin="0,0,16,0" Padding="20">
                <Grid>
                    <ui:SymbolIcon
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        FontSize="64"
                        Opacity="0.1"
                        Symbol="People24" />
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Usuários" />
                        <TextBlock
                            Margin="0,8,0,0"
                            FontSize="36"
                            FontWeight="Bold"
                            Text="{Binding TotalUsers}" />
                    </StackPanel>
                </Grid>
            </ui:CardControl>

            <ui:CardControl Margin="8,0,8,0" Padding="20">
                <Grid>
                    <ui:SymbolIcon
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        FontSize="64"
                        Opacity="0.1"
                        Symbol="Globe24" />
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Sessões Ativas" />
                        <TextBlock
                            Margin="0,8,0,0"
                            FontSize="36"
                            FontWeight="Bold"
                            Text="{Binding ActiveSessions}" />
                    </StackPanel>
                </Grid>
            </ui:CardControl>

            <ui:CardControl Margin="8,0,8,0" Padding="20">
                <Grid>
                    <ui:SymbolIcon
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        FontSize="64"
                        Opacity="0.1"
                        Symbol="Receipt24" />
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Transações (hoje)" />
                        <TextBlock
                            Margin="0,8,0,0"
                            FontSize="36"
                            FontWeight="Bold"
                            Text="{Binding TransactionsToday}" />
                    </StackPanel>
                </Grid>
            </ui:CardControl>

            <ui:CardControl Margin="16,0,0,0" Padding="20">
                <Grid>
                    <ui:SymbolIcon
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        FontSize="64"
                        Opacity="0.1"
                        Symbol="Money24" />
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Receita (hoje)" />
                        <TextBlock
                            Margin="0,8,0,0"
                            FontSize="36"
                            FontWeight="Bold"
                            Text="{Binding RevenueToday, StringFormat=C}" />
                    </StackPanel>
                </Grid>
            </ui:CardControl>
        </UniformGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="380" />
            </Grid.ColumnDefinitions>

            <ui:Card
                Grid.Column="0"
                Padding="24"
                VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,16"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Transações Recentes" />

                    <ui:DataGrid
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserResizeColumns="False"
                        CanUserResizeRows="False"
                        CanUserSortColumns="False"
                        IsReadOnly="True"
                        ItemsSource="{Binding RecentTransactions}"
                        VerticalScrollBarVisibility="Auto">
                        <ui:DataGrid.Columns>
                            <DataGridTextColumn
                                Width="1.5*"
                                Binding="{Binding TransactionId}"
                                Header="ID Transação" />
                            <DataGridTextColumn
                                Width="2*"
                                Binding="{Binding CustomerName}"
                                Header="Cliente" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Amount, StringFormat=C}"
                                Header="Valor" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Status}"
                                Header="Status" />
                        </ui:DataGrid.Columns>
                    </ui:DataGrid>
                </StackPanel>
            </ui:Card>

            <StackPanel Grid.Column="2">
                <ui:Card Margin="0,0,0,16" Padding="20">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,16"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="Ações Rápidas" />

                        <ui:CardAction
                            Command="{Binding NewSaleCommand}"
                            Content="Nova Venda"
                            Icon="{ui:SymbolIcon Add24}"
                            ToolTip="Iniciar um novo registro de venda." />

                        <ui:CardAction
                            Margin="0,12,0,0"
                            Command="{Binding NewUserCommand}"
                            Content="Usuários"
                            Icon="{ui:SymbolIcon PersonAdd24}"
                            ToolTip="Adicionar um novo membro à equipe." />

                        <ui:CardAction
                            Margin="0,12,0,0"
                            Command="{Binding NewProductCommand}"
                            Content="Produtos"
                            Icon="{ui:SymbolIcon Box24}"
                            ToolTip="Gerenciar catálogo de produtos." />

                        <ui:CardAction
                            Margin="0,12,0,0"
                            Command="{Binding NewCustomerCommand}"
                            Content="Clientes"
                            Icon="{ui:SymbolIcon People24}"
                            ToolTip="Gerenciar base de clientes." />

                        <ui:CardAction
                            Margin="0,12,0,0"
                            Command="{Binding NewCategoryCommand}"
                            Content="Categorias"
                            Icon="{ui:SymbolIcon Production24}"
                            ToolTip="Organizar categorias de produtos." />

                        <ui:CardAction
                            Margin="0,12,0,0"
                            Command="{Binding NewReportCommand}"
                            Content="Relatórios"
                            Icon="{ui:SymbolIcon Book24}"
                            ToolTip="Gerar relatórios." />

                    </StackPanel>
                </ui:Card>

                <ui:Card Padding="20">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,16"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="Status do Sistema" />
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="16" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontWeight="SemiBold"
                                Text="Servidor:" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Foreground="Green"
                                Text="{Binding ServerStatus}" />

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontWeight="SemiBold"
                                Text="CPU:" />
                            <ProgressBar
                                Grid.Row="2"
                                Grid.Column="1"
                                Height="20"
                                VerticalAlignment="Center"
                                Value="{Binding CpuLoad}" />
                        </Grid>
                    </StackPanel>
                </ui:Card>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>

