<ui:FluentWindow
    x:Class="PDV.Clients.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Login PDV"
    d:DataContext="{d:DesignInstance}"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    ExtendsContentIntoTitleBar="True"
    ResizeMode="NoResize"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.6*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Image Source="/Resources/Lavander_Image_Background.jpg" Stretch="UniformToFill" />

            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0.0" Color="#99000000" />
                        <GradientStop Offset="1.0" Color="#22000000" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <StackPanel
                Margin="60"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <ui:SymbolIcon
                    FontSize="64"
                    Foreground="White"
                    Symbol="ShoppingBag24" />
                <TextBlock
                    Margin="0,16,0,0"
                    FontSize="48"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="PDV" />
                <TextBlock
                    FontSize="24"
                    Foreground="#DDFFFFFF"
                    Text="Terminal de Vendas 01" />
            </StackPanel>

            <StackPanel
                Margin="60"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <ui:SymbolIcon
                    Margin="0,0,12,0"
                    Foreground="#AAFFFFFF"
                    Symbol="Headset24" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="#AAFFFFFF"
                    Text="Suporte: (11) 9999-9999" />
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Background="{DynamicResource ApplicationBackgroundBrush}">

            <StackPanel
                Width="380"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <TextBlock
                    Margin="0,0,0,8"
                    FontSize="32"
                    FontWeight="Bold"
                    Text="Identifique-se" />
                <TextBlock
                    Margin="0,0,0,40"
                    FontSize="16"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Inicie seu turno de vendas." />

                <ui:TextBox
                    x:Name="UsernameTextBox"
                    Height="42"
                    Margin="0,0,0,20"
                    ClearButtonEnabled="True"
                    FontSize="16"
                    Icon="{ui:SymbolIcon Person24}"
                    PlaceholderText="Código ou Usuário"
                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />

                <ui:PasswordBox
                    x:Name="PasswordBox"
                    Height="48"
                    Margin="0,0,0,20"
                    FontSize="16"
                    Icon="{ui:SymbolIcon LockClosed24}"
                    PlaceholderText="Senha de Acesso" />

                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                    Text="{Binding ErrorMessage}"
                    Visibility="{Binding ErrorMessage, Converter={x:Null}}" />

                <ui:Button
                    Height="50"
                    Appearance="Primary"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=PasswordBox}"
                    Content="INICIAR TURNO"
                    Cursor="Hand"
                    FontSize="16"
                    FontWeight="Bold"
                    Icon="{ui:SymbolIcon ArrowRight24}" />
            </StackPanel>

            <StackPanel
                Margin="0,0,0,24"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom">
                <TextBlock
                    HorizontalAlignment="Center"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                    Text="Conectado ao Servidor Principal" />
                <ui:SymbolIcon
                    Margin="0,4,0,0"
                    FontSize="12"
                    Foreground="Green"
                    Symbol="CircleSmall24" />
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>