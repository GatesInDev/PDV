<ui:FluentWindow
    x:Class="PDV.Clients.Views.ReportsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Relatório de Vendas"
    Width="1200"
    Height="800"
    MinWidth="900"
    MinHeight="600"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock
                    FontSize="28"
                    FontWeight="SemiBold"
                    Text="Relatórios de Vendas" />
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Visualize o desempenho de vendas por período" />
            </StackPanel>

            <ui:Button
                Grid.Column="1"
                VerticalAlignment="Top"
                Appearance="Secondary"
                Command="{Binding BackCommand}"
                Content="Voltar"
                Icon="{ui:SymbolIcon ArrowLeft24}" />
        </Grid>

        <ui:Card
            Grid.Row="1"
            Margin="0,0,0,24"
            Padding="16"
            VerticalAlignment="Top">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="24" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock
                        Margin="0,0,0,4"
                        FontWeight="Medium"
                        Text="Data Inicial" />
                    <DatePicker HorizontalAlignment="Stretch" SelectedDate="{Binding StartDate}" />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock
                        Margin="0,0,0,4"
                        FontWeight="Medium"
                        Text="Data Final" />
                    <DatePicker HorizontalAlignment="Stretch" SelectedDate="{Binding EndDate}" />
                </StackPanel>

                <StackPanel
                    Grid.Column="4"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <ui:Button
                        Appearance="Primary"
                        Command="{Binding GenerateReportCommand}"
                        Content="Gerar Relatório"
                        Icon="{ui:SymbolIcon Search24}" />

                    <ui:Button
                        Appearance="Secondary"
                        Command="{Binding ExportCommand}"
                        Content="Exportar"
                        Icon="{ui:SymbolIcon ArrowDownload24}" />
                </StackPanel>
            </Grid>
        </ui:Card>

        <UniformGrid
            Grid.Row="2"
            Margin="0,0,0,24"
            Columns="3">

            <ui:CardControl Margin="0,0,8,0" Padding="16">
                <Grid>
                    <ui:SymbolIcon
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        FontSize="48"
                        Opacity="0.1"
                        Symbol="Money24" />
                    <StackPanel>
                        <TextBlock
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Faturamento Total" />
                        <Viewbox HorizontalAlignment="Left" StretchDirection="DownOnly">
                            <TextBlock
                                Margin="0,4,0,0"
                                FontSize="28"
                                FontWeight="Bold"
                                Text="{Binding TotalRevenue, StringFormat=C}" />
                        </Viewbox>
                    </StackPanel>
                </Grid>
            </ui:CardControl>

            <ui:CardControl Margin="8,0,8,0" Padding="16">
                <Grid>
                    <ui:SymbolIcon
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        FontSize="48"
                        Opacity="0.1"
                        Symbol="Receipt24" />
                    <StackPanel>
                        <TextBlock
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Vendas Realizadas" />
                        <Viewbox HorizontalAlignment="Left" StretchDirection="DownOnly">
                            <TextBlock
                                Margin="0,4,0,0"
                                FontSize="28"
                                FontWeight="Bold"
                                Text="{Binding TotalSalesCount}" />
                        </Viewbox>
                    </StackPanel>
                </Grid>
            </ui:CardControl>

            <ui:CardControl Margin="8,0,0,0" Padding="16">
                <Grid>
                    <ui:SymbolIcon
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        FontSize="48"
                        Opacity="0.1"
                        Symbol="DataHistogram24" />
                    <StackPanel>
                        <TextBlock
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Ticket Médio" />
                        <Viewbox HorizontalAlignment="Left" StretchDirection="DownOnly">
                            <TextBlock
                                Margin="0,4,0,0"
                                FontSize="28"
                                FontWeight="Bold"
                                Text="{Binding AverageTicket, StringFormat=C}" />
                        </Viewbox>
                    </StackPanel>
                </Grid>
            </ui:CardControl>
        </UniformGrid>

        <ui:Card
            Grid.Row="3"
            Padding="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="16,16,0,8"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="Detalhamento das Transações" />

                <ui:DataGrid
                    Grid.Row="1"
                    AutoGenerateColumns="False"
                    BorderThickness="0"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding ReportItems}"
                    SelectionMode="Single">
                    <ui:DataGrid.Columns>
                        <DataGridTextColumn
                            Width="1.5*"
                            Binding="{Binding SaleDate, StringFormat=dd/MM/yyyy HH:mm}"
                            Header="Data" />
                        <DataGridTextColumn
                            Width="2*"
                            Binding="{Binding CustomerName}"
                            Header="Cliente" />

                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Status}"
                            Header="Status" />

                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding TotalAmount, StringFormat=C}"
                            FontWeight="Bold"
                            Header="Total" />
                    </ui:DataGrid.Columns>
                </ui:DataGrid>
            </Grid>
        </ui:Card>

    </Grid>
</ui:FluentWindow>