<ui:FluentWindow
    x:Class="PDV.Clients.Views.CustomerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Gestão de Clientes"
    Width="1400"
    Height="900"
    MinWidth="1000"
    MinHeight="700"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <ui:Button
                    Margin="0,0,12,0"
                    Padding="12,8"
                    Appearance="Secondary"
                    Command="{Binding BackCommand}"
                    Icon="{ui:SymbolIcon ArrowLeft24}"
                    ToolTip="Voltar para Dashboard" />
                <ui:SymbolIcon
                    Margin="0,0,12,0"
                    FontSize="32"
                    Symbol="Person24" />
                <TextBlock
                    FontSize="28"
                    FontWeight="SemiBold"
                    Text="Clientes" />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ui:Button
                    Margin="0,0,12,0"
                    Padding="12,8"
                    Appearance="Secondary"
                    Command="{Binding RefreshCommand}"
                    Icon="{ui:SymbolIcon ArrowSync24}">
                    <TextBlock Text="Atualizar" />
                </ui:Button>

                <ui:Button
                    Padding="12,8"
                    Appearance="Primary"
                    Command="{Binding NewCustomerCommand}"
                    Icon="{ui:SymbolIcon Add24}">
                    <TextBlock Text="Novo Cliente" />
                </ui:Button>
            </StackPanel>
        </Grid>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,8"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Foreground="#FF5555"
            Text="{Binding ErrorMessage}"
            TextWrapping="Wrap">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="Text" Value="">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="420" />
            </Grid.ColumnDefinitions>

            <ui:Card
                Grid.Column="0"
                Padding="0"
                VerticalAlignment="Stretch"
                VerticalContentAlignment="Stretch">
                <ui:DataGrid
                    AutoGenerateColumns="False"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    ItemsSource="{Binding Customers}"
                    SelectedItem="{Binding SelectedListItem, Mode=TwoWay}"
                    SelectionMode="Single"
                    VerticalScrollBarVisibility="Auto">
                    <ui:DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Name}"
                            Header="Nome" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Email}"
                            Header="Email" />
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding Age}"
                            Header="Idade" />
                        <DataGridTextColumn
                            Width="1.2*"
                            Binding="{Binding Address}"
                            Header="Endereço" />
                    </ui:DataGrid.Columns>
                </ui:DataGrid>
            </ui:Card>

            <ScrollViewer Grid.Column="2">
                <ui:Card
                    Padding="24"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Top">

                    <Grid>
                        <Grid DataContext="{Binding SelectedCustomer}">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,20"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Text="Detalhes do Cliente" />

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,8"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource SystemControlForeground}"
                                        Opacity="0.6"
                                        Text="Nome *" />
                                    <ui:TextBox
                                        Margin="0,0,0,16"
                                        PlaceholderText="Nome do cliente"
                                        Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                                    <TextBlock
                                        Margin="0,0,0,8"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource SystemControlForeground}"
                                        Opacity="0.6"
                                        Text="Email *" />
                                    <ui:TextBox
                                        Margin="0,0,0,16"
                                        PlaceholderText="email@example.com"
                                        Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

                                    <TextBlock
                                        Margin="0,0,0,8"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource SystemControlForeground}"
                                        Opacity="0.6"
                                        Text="Idade" />
                                    <ui:TextBox
                                        Margin="0,0,0,16"
                                        PlaceholderText="0"
                                        Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}" />

                                    <TextBlock
                                        Margin="0,0,0,8"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource SystemControlForeground}"
                                        Opacity="0.6"
                                        Text="Endereço *" />
                                    <ui:TextBox
                                        Margin="0,0,0,16"
                                        PlaceholderText="Rua, número, cidade"
                                        Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                            </ScrollViewer>

                            <StackPanel
                                Grid.Row="2"
                                Margin="0,16,0,0"
                                HorizontalAlignment="Stretch"
                                Orientation="Horizontal">
                                <ui:Button
                                    Margin="0,0,8,0"
                                    Padding="12,8"
                                    Appearance="Secondary"
                                    Command="{Binding DataContext.DeleteCustomerCommand, RelativeSource={RelativeSource AncestorType=ui:FluentWindow}}"
                                    Content="Excluir"
                                    Icon="{ui:SymbolIcon Delete24}" />

                                <ui:Button
                                    Padding="12,8"
                                    Appearance="Primary"
                                    Command="{Binding DataContext.SaveCustomerCommand, RelativeSource={RelativeSource AncestorType=ui:FluentWindow}}"
                                    Content="Salvar"
                                    Icon="{ui:SymbolIcon Save24}" />
                            </StackPanel>
                        </Grid>

                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="Gray"
                            Text="Selecione um cliente ou crie um novo.">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedCustomer}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </ui:Card>
            </ScrollViewer>
        </Grid>
    </Grid>
</ui:FluentWindow>